<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="fibaro_server_enabled"
        android:title="@string/pref_title_fibaro_server_enabled"
        android:summary="@string/pref_summary_fibaro_server_enabled"
        android:selectable="false"
        android:defaultValue="false" />
    <EditTextPreference
        android:key="arm_shell_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_arm_shell_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="disarm_shell_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_disarm_shell_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="arm_alarm_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_arm_alarm_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="disarm_alarm_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_disarm_alarm_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceScreen>
