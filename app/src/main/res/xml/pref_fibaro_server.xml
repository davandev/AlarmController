<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="fibaro_required_settings"
        android:title="@string/pref_title_required_configuration"
        android:summary="">
    <Preference
        android:summary="@string/pref_summary_required_configuration"
        android:selectable="false">
    </Preference>
    <EditTextPreference
        android:key="fibaro_auth_server_address"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <PreferenceScreen
        android:title="Fibaro Users"
        android:summary="Configure Fibaro users">
        <intent android:action="android.intent.action.VIEW"
            android:targetPackage="com.davan.alarmcontroller"
            android:targetClass="com.davan.alarmcontroller.settings.UsersSettingsActivity"/>
    </PreferenceScreen>
    </PreferenceCategory>
    <SwitchPreference
        android:key="fibaro_server_enabled"
        android:title="@string/pref_title_fibaro_server_enabled"
        android:summary="@string/pref_summary_fibaro_server_enabled"
        android:defaultValue="false" />
    <EditTextPreference
        android:key="arm_shell_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_arm_shell_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="disarm_shell_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_disarm_shell_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="arm_alarm_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_arm_alarm_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="disarm_alarm_scene"
        android:dependency="fibaro_server_enabled"
        android:title="@string/pref_title_disarm_alarm_scene"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceScreen>
